<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zc.documenter.mapper.ZsItemHistoryMapper">
    
    <resultMap type="ZsItemHistory" id="ZsItemHistoryResult">
        <result property="eventId"    column="event_id"    />
        <result property="itemId"    column="item_id"    />
        <result property="itemCode"    column="item_code"    />
        <result property="itemName"    column="item_name"    />
        <result property="unitCode"    column="unit_code"    />
        <result property="itemCategory"    column="item_category"    />
        <result property="itemStatus"    column="item_status"    />
        <result property="creationMethod"    column="creation_method"    />
        <result property="remark1"    column="remark1"    />
        <result property="remark2"    column="remark2"    />
        <result property="remark3"    column="remark3"    />
        <result property="remark4"    column="remark4"    />
        <result property="remark5"    column="remark5"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="lastUpdateFlag"    column="last_update_flag"    />
        <result property="operation"    column="operation"    />
    </resultMap>

    <sql id="selectZsItemHistoryVo">
        select event_id, item_id, item_code, item_name, unit_code, item_category, item_status, creation_method, remark1, remark2, remark3, remark4, remark5, create_by, create_time, update_by, update_time, last_update_flag, operation from zs_item_history
    </sql>

    <select id="selectZsItemHistoryList" parameterType="ZsItemHistory" resultMap="ZsItemHistoryResult">
        <include refid="selectZsItemHistoryVo"/>
        <where>  
            <if test="itemCode != null  and itemCode != ''"> and item_code = #{itemCode}</if>
            <if test="itemName != null  and itemName != ''"> and item_name like concat('%', #{itemName}, '%')</if>
            <if test="unitCode != null  and unitCode != ''"> and unit_code = #{unitCode}</if>
            <if test="itemCategory != null  and itemCategory != ''"> and item_category = #{itemCategory}</if>
            <if test="itemStatus != null  and itemStatus != ''"> and item_status = #{itemStatus}</if>
            <if test="creationMethod != null  and creationMethod != ''"> and creation_method = #{creationMethod}</if>
            and delete_id = 0
        </where>
    </select>
    
    <select id="selectZsItemHistoryByEventId" parameterType="Long" resultMap="ZsItemHistoryResult">
        <include refid="selectZsItemHistoryVo"/>
        where event_id = #{eventId}
    </select>


    <delete id="deleteZsItemHistoryByEventId" parameterType="Long">
        delete from zs_item_history where event_id = #{eventId}
    </delete>

    <delete id="deleteZsItemHistoryByEventIds" parameterType="String">
        UPDATE zs_item_history
        SET delete_id = 1
        WHERE event_id IN
        <foreach item="eventId" collection="array" open="(" separator="," close=")">
            #{eventId}
        </foreach>
    </delete>
</mapper>